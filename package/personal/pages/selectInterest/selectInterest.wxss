/* pages/long/long.wxss */

page {
  background: #f5f5f5;
  width: 92.6%;
  padding: 0 3.7%;
}

.interest-label {
  padding-top: 28rpx;
}

.interest-label-title {
  line-height: 114rpx;
  font-size: 36rpx;
  color: #000;
  font-weight: bold;
}

.interest-lable-content text:nth-child(3n) {
  margin-right: 0%;
}

.interest-lable-content {
  display: flex;
  flex-direction: row;
  width: 100%;
  flex-wrap: wrap;
}

.tag-self {
  height: 74rpx;
  width: 30.54%;
  margin-right: 4.1%;
  font-size: 28rpx;
  margin-bottom: 28rpx;
}

.tag-self:nth-child(3n) {
  margin-right: 0%;
}

.sloganEnd {
  width: 100%;
  position: fixed;
  bottom: 160rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.sloganEnd .sloganEndTitle {
  display: inline-block;
  text-align: center;
  width: 230rpx;
  background: #cc1a1a;
  color: #fff;
  font-size: 31rpx;
  line-height: 84rpx;
  height: 84rpx;
  border-radius: 7rpx;
}
