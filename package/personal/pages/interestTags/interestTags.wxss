.main-wrapper {
  width: 92.6%;
  padding: 0 3.7%;
  height: 100%;
}

.tag-top {
  width: 100%;
  height: auto;
  padding-top: 75rpx;
  display: flex;
  flex-direction: column;
}

.tag-foot {
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
  margin-top: 70rpx;
}

.tag-bar {
  width: 100%;
  height: 60rpx;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  margin-bottom: 10rpx;
}

.tag-title {
  flex: 1;
  display: flex;
  justify-content: flex-start;
  height: 50rpx;
  line-height: 50rpx;
  font-weight: bold;
  color: #000;
}

.tag-action-delete {
  line-height: 46rpx;
  color: #cc1a1a;
  font-size: 0.8em;
  display: inline-block;
  border: 2rpx solid #cc1a1a;
  width: 90rpx;
  height: 46rpx;
  text-align: center;
  border-radius: 10rpx;
}

.tag-action-add {
  line-height: 46rpx;
  color: #aaa;
  font-size: 0.8em;
  display: inline-block;
  border: 1px solid #aaa;
  width: 140rpx;
  height: 46rpx;
  text-align: center;
  border-radius: 10rpx;
}

.tag-content {
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.tag-self {
  height: 74rpx;
  width: 30.54%;
  margin-right: 4.1%;
  font-size: 28rpx;
  margin-bottom: 28rpx;
}

.tag-self:nth-child(3n) {
  margin-right: 0%;
}

.tag-long {
  height: 74rpx;
  margin-right: 4.1%;
  font-size: 28rpx;
  margin-bottom: 28rpx;
}
