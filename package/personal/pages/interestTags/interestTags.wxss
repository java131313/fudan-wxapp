.tag-wrapper {
  width: 92.6%;
  padding: 75rpx 3.7%;
}

.tag-top {
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
}

.tag-foot {
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
}

.tag-bar {
  width: 100%;
  height: 60rpx;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
}

.tag-title {
  flex: 1;
  display: flex;
  justify-content: flex-start;
  height: 35rpx;
  line-height: 35rpx;
  font-weight: bold;
  color: #000;
}

.tag-action-delete {
  line-height: 35rpx;
  color: #cc1a1a;
  font-size: 0.8em;
}

.tag-action-add {
  line-height: 35rpx;
  color: #aaa;
  font-size: 0.8em;
}

.tag-content {
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.tag-self {
  height: 74rpx;
  width: 30.54%;
  margin-right: 4.1%;
  font-size: 28rpx;
  margin-bottom: 28rpx;
}

.tag-self:nth-child(3n) {
  margin-right: 0%;
}
