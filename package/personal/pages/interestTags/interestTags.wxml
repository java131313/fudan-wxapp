<wxs src='../../../../wxapp/wxs/filter.wxs' module='filter' />

<view class="main-wrapper">
  <view class="tag-top">
    <view class="tag-bar">
      <text class="tag-title">我的标签</text>
      <text class="tag-action-delete" bindtap='deleteTag'>完成</text>
    </view>
    <view class="tag-content">
      <block wx:for='{{selfTags}}' wx:key='{{item.id}}'>
        <tab-widget id='st_{{item.id}}' class='{{filter.strLengthIsMoreThan(item.name,4) ? "tag-long" : "tag-self"}}' hoverClass='delete-interest-hover' is_radius='{{true}}' dataTid='{{item.id}}' tagText='{{item.name}}' bind:selectTag='deleteInterestLable' />
      </block>
    </view>
  </view>
  <view class="tag-foot">
    <view class="tag-bar">
      <text class="tag-title">更多标签</text>
      <text class="tag-action-add" bindtap='addTag'>点击添加</text>
    </view>
    <view class="tag-content">
      <block wx:for='{{tags}}' wx:key='{{item.id}}'>
        <tab-widget id='mt_{{item.id}}' class='{{filter.strLengthIsMoreThan(item.name,4) ? "tag-long" : "tag-self"}}' hoverClass='select-interest-hover' is_radius='{{true}}' dataTid='{{item.id}}' tagText='{{item.name}}' bind:selectTag='selectInterestLable' />
      </block>
    </view>
  </view>
</view>