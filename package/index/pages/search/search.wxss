.all, .first, .second {
  background-color: #f5f5f5;
  height: 100%;
}

.top {
  background-color: #fff;
  margin-top: 32rpx;
}

.search {
  display: inline-block;
  background: #f5f5f5;
  width: 90%;
  font-size: 28rpx;
  line-height: 68rpx;
  color: #aaa;
  margin-left: 5%;
  border-radius: 50rpx;
  outline: none;
}

.btnClass {
  font-size: 28rpx;
  line-height: 68rpx;
  color: #aaa;
}

.searchBtn {
  padding-left: 15%;
  color: #000;
  position: relative;
  height: 85rpx;
  line-height: 68rpx;
}

.searchBtn image {
  position: absolute;
  top: 20%;
  left: 5%;
  width: 28%;
  height: 70%;
}

.down {
  display: block;
  padding: 0 5%;
  background-color: #fff;
}

.newcontent {
  width: 100%;
  height: 100%;
  position: relative;
  display: flex;
  align-items: center;
  overflow: hidden;
  padding: 1rpx 0;
  margin-bottom: 1rpx;
  background-color: #fff;
}

.picture {
  display: inline-block;
  width: 50%;
  height: 130rpx;
  overflow: hidden;
}

.imageclass {
  height: 100%;
  width: 100%;
}

.contentnoe {
  display: inline-block;
  overflow: hidden;
  width: 100%;
  height: 180rpx;
  padding: 0 0 0 5%;
}

.content {
  display: inline-block;
  overflow: hidden;
  width: 100%;
  height: 180rpx;
}

.newsA {
  width: 100%;
}

.title {
  display: inline-block;
  font-size: 31rpx;
  color: rgba(0, 0, 0, 0.7);
  font-weight: bold;
  margin-top: 20rpx;
}

.time {
  font-size: 25rpx;
  color: rgba(0, 0, 0, 0.3);
}

.class {
  padding: 15rpx 0 0 0;
  background-color: #fff;
}

.classtext {
  font-weight: bold;
  font-size: 27rpx;
  color: rgba(0, 0, 0, 0.3);
}

.second {
  margin-top: 20rpx;
}

.newsport {
  width: 100%;
  height: 100%;
  position: relative;
  display: flex;
  overflow: hidden;
  padding: 5rpx 0 0 0;
  margin-bottom: 2rpx;
  background-color: #fff;
}

.sporttitle {
  width: 100%;
  font-size: 31rpx;
  color: rgba(0, 0, 0, 0.75);
  font-weight: bold;
}
