.activ_btn {
  display: flex;
  justify-content: center;
  width: 92%;
  padding: 0 4%;
}

.activ_from {
  display: inline-block;
  width: 100%;
  padding-bottom: 36rpx;
  border-bottom: 1px solid #e5e5e5;
}

.btn1 {
  display: inline-block;
  width: 36.3%;
  border: 1px solid #d95454;
  font-size: 32rpx;
  line-height: 82rpx;
  color: #cc1a1a;
  text-align: center;
  background: rgba(255, 255, 255, 0);
}

.btn2 {
  display: inline-block;
  width: 60.2%;
  margin-left: 3%;
  font-size: 32rpx;
  line-height: 82rpx;
  background: #cc1a1a;
  color: #fff;
}

.activ_poster {
  width: 92%;
  padding: 0 4%;
}

.activ_poster_title {
  font-size: 32rpx;
  line-height: 54rpx;
  color: #333;
}

.activ_poster_content {
  display: block;
  font-size: 32rpx;
  line-height: 54rpx;
  color: #333;
  overflow: hidden;
}

.activ_poster_img{
  width: 100%;
}