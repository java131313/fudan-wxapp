<wxs src='../../../../wxapp/wxs/filter.wxs' module='filter' />

<view class='main-wrapper'>
  <view class='vote-container'>
    <title-bar title='{{voteDetail.name}}' issuetime='{{voteDetail.begintime}}' />
    <text class='vote_publish_comment'>{{voteDetail.explain}}</text>
    <block wx:for="{{voteDetail.options}}" wx:key='{{item.id}}'>
      <vote-bar option_id="{{index+1}}" option_img="{{item.img}}" option_content="{{item.title}}" option_percent="{{filter.formatPercent(item.percent)}}" option_isVote="{{filter.arrayIsContain(voteDetail.voted,item.id)}}" />
    </block>
  </view>
</view>

<comment-bar class='commentbar' comments="{{voteDetail.comments}}" />