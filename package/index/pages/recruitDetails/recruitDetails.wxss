.main-wrapper {
  width: 92.6%;
  padding: 0 3.7%;
  height: auto;
  overflow: hidden;
}

.recruit-container {
  width: 100%;
  height: auto;
  margin-top: 20rpx;
  border-bottom: 5rpx solid #f5f5f5;
}

.recruit-content {
  width: 100%;
  height: auto;
  margin-top: 10rpx;
}

.recruit-btn {
  display: inline-block;
  width: 100%;
  height: 84rpx;
  background: #cc1a1a;
  color: #fbefef;
  text-align: center;
  line-height: 84rpx;
  font-size: 0.8em;
  margin: 20rpx 0rpx 30rpx 0rpx;
  border-radius: 10rpx;
}

.after {
  background: #fff7e3;
  color: #e8b074;
}
