.recruit_job{
  line-height:108rpx ;
  font-size: 36rpx;
  color: #333333;
  height: 108rpx;
  font-weight: bold;
}
.recruit_from{
  width: 96.3%;
  padding-right: 3.7%;
}
.recruit_message{
  display: flex;
  justify-content: flex-end;
  margin-bottom: 20rpx;
}
.recruit_message text{
  font-size: 30rpx;
  line-height: 74rpx;
  color: #aaaaaa;
}
.recruit_message input{
  width: 78%;
  height: 74rpx;
  border: 1px solid #e7e7e7;
  margin-left: 2%;
}
.recruit_message textarea{
  width: 78%;
  border: 1px solid #e7e7e7;
  margin-left: 2%;
}
.recruit_btn{
  width: 100%;
}
.recruit_btn{
  position: absolute;
  bottom: 0%;
  left: 0%;
}
.recruit_btn button{
  display: inline-block;
  background: rgba(0, 0, 0, 0);
  width: 50%;
  color:#999999;
}
.recruit_button::after{
  border: none;
}