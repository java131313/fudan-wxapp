<wxs src='../../wxapp/wxs/filter.wxs' module='filter' />

<view class="main-wrapper" style='background:{{bgColor}}'>
  <view class='slogan'>
    <text class='sloganH1'>选择你最关心的资讯和服务，我们将为你定制个性化信息内容</text>
    <text class='sloganH2'>集结复旦大学全网资讯及服务，随时了解校园动态</text>
    <text class='sloganH3'>请选择你的身份</text>
  </view>
  <view class='tag'>
    <block wx:for='{{idList}}' wx:key='{{item.id}}'>
      <tab-widget id='com_{{item.id}}' class='tag-self' hoverClass='select-id-hover' iconUrl='{{filter.imageSrcParse(item.iconUrl)}}' iconUrlHover='{{filter.imageSrcParse(item.iconUrlHover)}}' dataTid='{{item.id}}' tagText='{{item.name}}' bind:selectTag='selectIdentity'
      />
    </block>
  </view>
  <view class='sloganEnd'>
    <text class='sloganEndTitle' bindtap='nextAction'>下一步</text>
  </view>
</view>