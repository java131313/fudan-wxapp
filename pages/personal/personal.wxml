<view class='person-wrapper'>
  <view class='person-top'>
    <view class='person-avatar-box'>
      <image class='person-avatar-default' src='../../images/default_avatar.png'></image>
      <!-- <open-data type="userAvatarUrl" class="person-avatar"></open-data> -->
    </view>
    <view class='person-nickname-box'>
      <text class='person-nickname'>点击登录</text>
      <!-- <open-data type="userNickName" class="person-nickname"></open-data> -->
    </view>
    <view class='person-major-box'>
      <text class='person-major'>传媒与设计学院</text>
      <view class='person-major-icon-box'>
        <image src='../../images/major_icon.png'></image>
      </view>
    </view>
  </view>
  <view class='person-container'>
    <block wx:for='{{actionBarItem}}' wx:key='this'>
      <action-bar class='overspread' 
      actionNaviTo='{{item.actionNaviTo}}' 
      actionIconUrl='{{item.actionIconUrl}}' 
      actionText='{{item.actionText}}' />
    </block>
  </view>
</view>