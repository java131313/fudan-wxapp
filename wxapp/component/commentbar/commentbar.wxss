.comment-container {
  width: 100%;
  height: auto;
  background: #f5f5f5;
}

.commentFunction {
  display: flex;
  width: 92.6%;
  padding: 0 3.7%;
  justify-content: space-between;
}

.commentFunction_title {
  font-size: 28rpx;
  line-height: 104rpx;
  color: #aaa;
}

.commentFunction_speak {
  font-size: 28rpx;
  line-height: 104rpx;
  color: #cc1a1a;
}

.commentContent {
  display: flex;
  width: 92.6%;
  padding: 0 3.7% 40rpx;
}

.commentContent_pic_parent {
  width: 10%;
  height: 68rpx;
  background-color: #fff;
}

.commentContent_pic {
  height: 100%;
  width: 100%;
}

.commentContent_all {
  width: 76%;
  padding-left: 2%;
  overflow: hidden;
}

.commentContent_name {
  font-size: 28rpx;
  color: #aaa;
  display: block;
  line-height: 34rpx;
  overflow: hidden;
}

.commentContent_speak {
  display: block;
  color: #333;
  font-size: 28rpx;
  line-height: 34rpx;
  font-weight: bold;
  overflow: hidden;
}

.commentContent_attitude {
  width: 14%;
}

.click_love2 {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  overflow: hidden;
}

.click_love2 image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 5rpx;
}

.click_love2 text {
  font-size: 24rpx;
  color: #aaa;
  line-height: 24rpx;
}

.Modal_view {
  width: 100%;
  height: 100%;
  background: rgba(236, 236, 236, 0.7);
  position: fixed;
  top: 0;
  z-index: 7;
}

.commentView {
  width: 92.6%;
  padding: 0 3.7%;
  position: fixed;
  bottom: 0%;
  z-index: 10;
  background: #fff;
}

.commentView_title {
  font-size: 32rpx;
  color: #000;
  border-bottom: 1px solid #eee;
  padding: 32rpx 0;
}

.commentView_title input {
  height: 500rpx;
  width: 100%;
  font-size: 32rpx;
  line-height: 110rpx;
}

.commentView_true {
  display: flex;
}

.commentView_true view {
  width: 50%;
}

.none::after {
  border: none;
}

.no {
  color: #999;
  background: #fff;
  line-height: 136rpx;
  font-size: 36rpx;
}

.yes {
  color: #cc1a1a;
  background: #fff;
  line-height: 136rpx;
  font-size: 36rpx;
}

.th-text {
  width: 100%;
  justify-content: center;
  color: #000;
  display: block;
  height: 70rpx;
  align-items: center;
  max-height: 70rpx;
}
