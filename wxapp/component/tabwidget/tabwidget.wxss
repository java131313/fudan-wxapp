@import '/wxapp/wxss/component.wxss';

.tag-item {
  height: 100%;
  color: #999;
  border: 2rpx solid #ddd;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 40rpx;
  background: #fff;
  flex-direction: column;
}

.bg_radius {
  border-radius: 10rpx;
  background: #f5f5f5;
  height: 100%;
  color: #999;
  border: 2rpx solid #ddd;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 40rpx;
}

.tag-icon {
  display: block;
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 15rpx;
}

.tag-item text {
  display: block;
}
