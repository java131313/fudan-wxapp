/* wxapp/component/observerbar/observerbar.wxss */

.click_like {
  width: 100%;
  overflow: hidden;
}

.click_like_border {
  display: flex;
}

.click_love {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 33%;
}

.click_love image {
  width: 30rpx;
  height: 30rpx;
}

.click_love text {
  line-height: 94rpx;
  font-size: 28rpx;
  color: #888;
}

.commentFunction {
  display: flex;
  width: 92.6%;
  padding: 0 3.7%;
  justify-content: space-between;
  background: #f5f5f5;
}

.commentFunction_title {
  font-size: 28rpx;
  line-height: 104rpx;
  color: #aaa;
}

.commentFunction_speak {
  font-size: 28rpx;
  line-height: 104rpx;
  color: #cc1a1a;
}

.commentContent {
  display: flex;
  width: 92.6%;
  padding: 0 3.7% 40rpx;
  background: #f5f5f5;
  /* justify-content: center; */
}

.commentContent_pic_parent {
  /* width: 100rpx; *//* width: 9.8%; */
  width: 10%;
  height: 68rpx;
}
.commentContent_pic{
  height: 100%;
  width: 100%;
}

.commentContent_all {
  width: 76%;
  padding-left: 2%;
}

.commentContent_name {
  font-size: 28rpx;
  color: #aaa;
  display: block;
  line-height: 34rpx;
}

.commentContent_speak {
  display: block;
  color: #333;
  font-size: 28rpx;
  line-height: 34rpx;
  font-weight: bold;
}

.commentContent_attitude {
  width: 14%;
}

.click_love2 {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
}

.click_love2 image {
  width: 30rpx;
  height: 30rpx;
}
.click_love2 text{
  font-size:24rpx;
  color: #aaaaaa;
  line-height: 24rpx;
}