.search-wrapper {
  display: block;
  padding: 0 5%;
  background-color: #fff;
  margin-bottom: 25rpx;
}

.search-top {
  padding-top: 20rpx;
}

.search-top > text {
  font-weight: bold;
  font-size: 27rpx;
  color: rgba(0, 0, 0, 0.3);
  line-height: 54rpx;
}

.search-top-title {
  float: left;
}

.search-top-loadmore {
  float: right;
}

.search-container {
  width: 100%;
  height: 100%;
  display: flex;
  overflow: hidden;
  background-color: #fff;
  border-bottom: 2rpx solid #f5f5f5;
}

.search-content {
  margin-top: 15rpx;
  margin-bottom: 15rpx;
}

.search-content > text {
  display: block;
}

.search-content-title {
  width: 100%;
  font-size: 31rpx;
  color: rgba(0, 0, 0, 0.75);
  font-weight: bold;
}

.search-content-time {
  font-size: 25rpx;
  color: rgba(0, 0, 0, 0.3);
}
