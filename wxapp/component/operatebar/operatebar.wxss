.operate-container {
  width: 100%;
  height: 90rpx;
  overflow: hidden;
  display: flex;
  border-top: 5rpx solid #f5f5f5;
}

.operate-item {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.operate-item image {
  display: inline-block;
  width: 30rpx;
  height: 30rpx;
  margin-right: 15rpx;
}

.operate-item text {
  display: inline-block;
  font-size: 28rpx;
  color: #888;
}
