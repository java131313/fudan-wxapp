.vote {
  display: flex;
  justify-content: flex-start;
}

.vote_index {
  width: 8.5%;
  text-align: center;
}

.vote_index text {
  line-height: 118rpx;
  font-size: 28rpx;
  color: #aaa;
  display: inline-block;
}

.vote_pic {
  width: 11.7%;
}

.vote_pic image {
  width: 100%;
  height: 90rpx;
  margin-top: 14rpx;
}

.vote_text {
  width: 16.8%;
}

.vote_text text {
  line-height: 118rpx;
  font-size: 32rpx;
}

.vote_temp {
  width: 33.33%;
  margin-top: 38rpx;
}

.vote_status {
  width: 29%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.vote_status_yes {
  display: inline-block;
  width: 50%;
  text-align: center;
  line-height: 62rpx;
  background: #fff3f3;
  color: #cc1a1a;
  font-size: 30rpx;
}

.vote_status_no {
  display: inline-block;
  width: 50%;
  text-align: center;
  line-height: 62rpx;
  border: 1px solid #de6b6b;
  color: #de6b6b;
  font-size: 30rpx;
}

.click_like {
  width: 92.6%;
  padding: 0 3.7%;
  margin-top: 30rpx;
  overflow: hidden;
}

.click_like_border {
  border-top: 2rpx solid #e5e5e5;
}

.click_love {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 33%;
}

.click_love image {
  width: 30rpx;
  height: 30rpx;
}

.click_love text {
  line-height: 94rpx;
  font-size: 28rpx;
  color: #888;
}
